<%- include("../partials/head", { title: "Update Account" }) %>

<body>
  <div id="wrapper">
    <%- include("../partials/header") %>
    <%- include("../partials/navigation", { nav }) %>

    <main>
      <h1>Update Account Information</h1>

      <% if (message) { %>
        <p class="notice"><%= message %></p>
      <% } %>

      <form action="/account/update" method="POST">
        <input type="hidden" name="account_id" value="<%= account.account_id %>">

        <label>First Name</label>
        <input type="text" name="firstname" value="<%= account.account_firstname %>" required>

        <label>Last Name</label>
        <input type="text" name="lastname" value="<%= account.account_lastname %>" required>

        <label>Email</label>
        <input type="email" name="email" value="<%= account.account_email %>" required>

        <button type="submit">Update</button>
      </form>

      <p><a href="/account/manage">Back to Management</a></p>
    </main>

    <%- include("../partials/footer") %>
  </div>
</body>

