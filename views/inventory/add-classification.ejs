<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', { title: "Add Classification" }) %>

  <body>
    <div id="wrapper">

      <%- include('../partials/header') %>
      <%- include('../partials/navigation') %>

      <main>
        <h1>Add Classification</h1>

        <% if (message) { %>
          <p class="notice"><%= message %></p>
        <% } %>

        <form action="/inv/add-classification" method="post" novalidate>

          <label for="classification_name">
            Classification Name (letters only, no spaces):
          </label>

          <input
            type="text"
            id="classification_name"
            name="classification_name"
            required
            minlength="3"
            maxlength="30"
            pattern="^[A-Za-z]{3,30}$"
            title="Letters only, 3â€“30 characters"
            value="<%= formData.classification_name || '' %>"
          >

          <button type="submit">Add Classification</button>
        </form>

      </main>

      <%- include('../partials/footer') %>
    </div>
  </body>
</html>




