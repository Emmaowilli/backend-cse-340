<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><%= title %> | CSE Motors</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/styles.css" />
  <style>
    body, #main-content { background: #f8f9fa !important; background-image: none !important; }

    .detail-wrapper {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 2rem;
      background: white;
      border-radius: 16px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.1);
      display: flex;
      gap: 3rem;
      flex-wrap: wrap;
    }

    .detail-image {
      flex: 1;
      min-width: 300px;
      text-align: center;
    }
    .detail-image img {
      width: 100%;
      max-width: 600px;
      border-radius: 12px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .detail-info {
      flex: 2;
      min-width: 300px;
      font-size: 1.1rem;
      line-height: 1.8;
    }

    .detail-info h1 {
      font-size: 2.8rem;
      margin: 0 0 0.5rem;
      color: #1a1a1a;
    }

    .price {
      font-size: 2.2rem;
      color: #d32f2f;
      font-weight: bold;
      margin: 0.5rem 0;
    }

    .description {
      background: #f0f0f0;
      padding: 1.5rem;
      border-radius: 12px;
      margin: 1.5rem 0;
      font-size: 1.15rem;
    }

    .specs-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      background: #f9f9f9;
      padding: 1.5rem;
      border-radius: 12px;
      margin-top: 1rem;
    }

    .favorite-box {
      margin-top: 2rem;
      padding: 2rem;
      background: linear-gradient(135deg, #ffebee, #fff3e0);
      border: 3px solid #e91e63;
      border-radius: 16px;
      text-align: center;
    }

    .favorite-btn {
      background: #e91e63;
      color: white;
      border: none;
      padding: 1.2rem 3rem;
      font-size: 1.5rem;
      border-radius: 50px;
      cursor: pointer;
      font-weight: bold;
      box-shadow: 0 8px 25px rgba(233,30,99,0.4);
    }

    .login-prompt {
      margin-top: 1.5rem;
      padding: 2rem;
      background: #e3f2fd;
      border: 3px solid #1976d2;
      border-radius: 16px;
      font-size: 1.3rem;
      color: #1565c0;
    }
    .login-prompt a { color: #1976d2; font-weight: bold; text-decoration: underline; }
  </style>
</head>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/navigation') %>

  <main id="main-content">
    <div class="detail-wrapper">
      <%- detailsHTML %>

      <div class="detail-info">
        <!-- FAVORITES â€” BIG AND OBVIOUS -->
        <div class="favorite-box">
          <% if (loggedin) { %>
            <form action="/account/favorite/add" method="post">
              <input type="hidden" name="inv_id" value="<%= req.params.inv_id %>">
              <button type="submit" class="favorite-btn">
                Add to Favorites Add to My Favorites
              </button>
            </form>
          <% } else { %>
            <div class="login-prompt">
              <strong>Want to save this vehicle?</strong><br><br>
              <a href="/account/login">Log in</a> or <a href="/account/register">Register</a> to add to your favorites!
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>