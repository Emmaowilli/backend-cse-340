<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title><%= title %> | CSE Motors</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/styles.css" />
  <style>
    /* === REMOVE UGLY CHECKERBOARD & MAKE CLEAN BACKGROUND === */
    body, #main-content {
      background: #f8f9fa !important;
      background-image: none !important;
    }

    /* === VEHICLE DETAIL - CLEAN & MODERN LAYOUT === */
    .vehicle-detail-container {
      max-width: 1200px;
      margin: 2rem auto;
      padding: 2rem;
      background: white;
      border-radius: 12px;
      box-shadow: 0 8px 25px rgba(0,0,0,0.1);
      display: flex;
      gap: 3rem;
      flex-wrap: wrap;
      align-items: flex-start;
    }

    .vehicle-image {
      flex: 1 1 500px;
      text-align: center;
    }
    .vehicle-image img {
      width: 100%;
      max-width: 700px;
      height: auto;
      border-radius: 12px;
      box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    }

    .vehicle-info {
      flex: 1 1 400px;
      font-size: 1.1rem;
      line-height: 1.7;
    }

    .vehicle-title {
      font-size: 2.4rem;
      margin: 0 0 0.5rem;
      color: #1a1a1a;
    }

    .price {
      font-size: 2rem;
      color: #d32f2f;
      font-weight: bold;
    }

    .details-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
      margin: 1.5rem 0;
      background: #f5f5f5;
      padding: 1.5rem;
      border-radius: 8px;
    }

    .details-grid strong { color: #333; }

    /* === FAVORITE BUTTON - BEAUTIFUL & VISIBLE === */
    .favorite-section {
      margin-top: 2rem;
      padding: 1.5rem;
      background: #fff8f8;
      border: 2px solid #ffcdd2;
      border-radius: 12px;
      text-align: center;
    }

    .favorite-btn {
      background: #e91e63;
      color: white;
      border: none;
      padding: 1rem 2rem;
      font-size: 1.3rem;
      border-radius: 50px;
      cursor: pointer;
      display: inline-flex;
      align-items: center;
      gap: 0.8rem;
      box-shadow: 0 4px 15px rgba(233,30,99,0.3);
      transition: all 0.3s;
    }
    .favorite-btn:hover {
      background: #c2185b;
      transform: translateY(-2px);
    }
    .favorite-btn span { font-size: 2rem; }

    .login-prompt {
      margin-top: 1.5rem;
      padding: 1.5rem;
      background: #e3f2fd;
      border: 2px solid #bbdefb;
      border-radius: 12px;
      font-size: 1.2rem;
      color: #1565c0;
    }
    .login-prompt a {
      color: #1976d2;
      font-weight: bold;
      text-decoration: underline;
    }

    @media (max-width: 768px) {
      .vehicle-detail-container { padding: 1rem; gap: 2rem; }
      .vehicle-title { font-size: 2rem; }
    }
  </style>
</head>
<body>
  <%- include('../partials/header') %>
  <%- include('../partials/navigation') %>

  <main id="main-content">
    <div class="vehicle-detail-container">
      <%- detailsHTML %>

      <!-- FAVORITES SECTION - BEAUTIFUL & CLEAR -->
      <div class="favorite-section" style="width: 100%;">
        <% if (loggedin) { %>
          <form action="/account/favorite/add" method="post">
            <input type="hidden" name="inv_id" value="<%= inv_id %>">
            <button type="submit" class="favorite-btn">
              <span>Add to Favorites</span> Add to Favorites
            </button>
          </form>
        <% } else { %>
          <div class="login-prompt">
            <strong>Want to save this beauty?</strong><br>
            <a href="/account/login">Log in</a> or <a href="/account/register">Register</a> to add vehicles to your favorites!
          </div>
        <% } %>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>